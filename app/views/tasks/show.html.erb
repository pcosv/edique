<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Final date:</strong>
  <%= @task.final_date %>
</p>

<p>
  <strong>Task report:</strong>
  <%= @task.task_report %>
</p>

<%= image_tag(@task.image_url.to_s) %>

<%= link_to 'Edit', edit_project_task_path(@project, @task) %> |
<%= link_to 'Back', project_tasks_path(@project) %>




<h1>Users</h1>


 <ul>
  <% @users.each do |user| next if !user.projects.exists?(@project) %>
	    <li>
	    <%= link_to user.first_name ? user.first_name : user.cpf, project_task_add_member_path(@project, @task, user), method: :post %>
	    <%= user.tasks.exists?(@task) ? 'Faz parte' : 'Nao faz parte'%>
	    </li>
  <% end %>
</ul>
